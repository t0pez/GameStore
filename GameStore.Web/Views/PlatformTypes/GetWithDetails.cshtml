@model GameStore.Web.ViewModels.PlatformTypes.PlatformTypeViewModel

@{
    ViewBag.Title = "Details";
    Layout = "_Layout";
}

<h2>Details</h2>

<div class="row">

    <div class="col-6">

        <div class="mb-3">
            <div>
                @Html.LabelFor(model => model.Name, "Name:", new { @class = "form-label fw-bolder" })
                @Html.DisplayFor(model => model.Name)
            </div>
        </div>
    </div>

    <div class="col-6">
        <div class="mb-3">
            @Html.ActionLink("Edit", "Update", new { id = Model.Id }, new { @class = "btn btn-info" })
        </div>
        <div>
            <form method="post" asp-controller="PlatformTypes" asp-action="Delete">
                <input type="hidden" name="id" id="id" value="@Model.Id"/>
                <button type="submit" class="btn btn-warning">Delete</button>
            </form>
        </div>
    </div>
</div>