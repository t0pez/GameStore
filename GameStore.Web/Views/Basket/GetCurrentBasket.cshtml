@model GameStore.Web.ViewModels.Baskets.BasketViewModel

@{
    ViewBag.Title = "Basket";
    Layout = "_Layout";
}

<h2 class="mt-5">Basket</h2>

@if (Model.Items.Count == 0)
{
    <p>
        You have no items in basket
    </p>
}
else
{
    foreach (var item in Model.Items)
    {
        <div class="mb-3">
            <div>
                @Html.LabelFor(model => item.GameId, "GameId:", new { @class = "form-label fw-bolder" })
                @Html.DisplayFor(model => item.GameId)
            </div>
            <div>
                @Html.LabelFor(model => item.Quantity, "Quantity:", new { @class = "form-label fw-bolder" })
                @Html.DisplayFor(model => item.Quantity)
            </div>
        </div>
    }
}