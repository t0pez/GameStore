@model IEnumerable<GameStore.Web.ViewModels.User.UserListViewModel>

@{
    ViewBag.Title = "Users";
    Layout = "_Layout";
}

<h2 class="mt-3">Users</h2>

<div class="row">

    <div class="col-8">
        <table class="table">
            <tr>
                <th>
                    <span class="fw-bolder">Name</span>
                </th>
                <th>
                    <span class="fw-bolder">Role</span>
                </th>
                <th></th>
            </tr>

            @foreach (var user in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => user.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => user.Role)
                    </td>
                    <td>
                        @Html.ActionLink("Checkout", "GetWithDetails", new { id = user.Id })
                    </td>
                </tr>
            }
        </table>
    </div>

</div>