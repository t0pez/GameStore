@model IEnumerable<GameStore.Web.ViewModels.Games.GameListViewModel>

@{
    Layout = "_Layout";
}

<h2 class="mt-3">Games</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th> 
        
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        
        <td>
            @Html.ActionLink("Checkout", "GetWithDetails", new { gameKey = item.Key })
        </td>
    </tr>
}

</table>