@model GameStore.Web.ViewModels.Games.GamesGetAllViewModel

@{
    ViewBag.Title = "Index";
    Layout = "_Layout";
}

<h2 class="mt-3">Games</h2>

<div class="row">
    <div class="col-4">
        @{
            await Html.RenderPartialAsync("GetAllFilterPartialView", Model.Filter);
        }
    </div>
    
    <div class="col-8">
        <table class="table">
            <tr>
                <th>
                    <span class="fw-bolder">Name</span>
                </th>
                <th>
                    <span class="fw-bolder">Price</span>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Games) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Price)
                    </td>
                    <td>
                        @Html.ActionLink("Checkout", "GetWithDetails", new { gameKey = item.Key })
                    </td>
                </tr>
            }

        </table>
    </div>

</div>