@model IEnumerable<GameStore.Web.ViewModels.Publisher.PublisherListViewModel>

@{
    ViewBag.Title = "Publishers";
    Layout = "_Layout";
}

<h2 class="mt-3">Publishers</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td>
                @Html.ActionLink("Checkout", "GetWithDetails", new { companyName = item.Name })
            </td>
        </tr>
    }

</table>