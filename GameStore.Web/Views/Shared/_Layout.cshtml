<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-grid.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-reboot.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap-utilities.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <div class="navbar navbar-expand-sm navbar-dark bg-primary">
        <div class="container-fluid">
            
            <div class="">
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="navbar-collapse">
                    <span class="navbar-toggler-icon"></span> 
                </button>
                @Html.ActionLink("Games", "GetAll", "Games", new {area = ""}, new {@class = "navbar-brand"})
            </div>
    
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#">
                            Games
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("View all", "GetAll", "Games", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Create", "Create", "Games", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#">
                            Genres
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("View all", "GetAll", "Genres", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Create", "Create", "Genres", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#">
                            Platform types
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("View all", "GetAll", "PlatformTypes", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Create", "Create", "PlatformTypes", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>
                    
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" role="button" data-bs-toggle="dropdown" href="#">
                            Publishers
                        </a>
                        <ul class="dropdown-menu">
                            <li>
                                @Html.ActionLink("View all", "GetAll", "Publisher", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                            <li>
                                @Html.ActionLink("Create", "Create", "Publisher", new { area = "" }, new { @class = "dropdown-item" })
                            </li>
                        </ul>
                    </li>

                    <li class="nav-item">
                        @Html.ActionLink("Basket", "GetCurrentBasket", "Basket", new { area = "" }, new { @class = "nav-link active" })
                    </li>
                </ul>
            </div>
    
        </div>
    </div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2022 - GameStore.Web
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
