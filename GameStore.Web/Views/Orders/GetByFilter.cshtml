@model GameStore.Web.ViewModels.Order.GetAllViewModel

@{
    ViewBag.Title = "Orders";
    Layout = "_Layout";
}

<h2 class="mt-3">Orders</h2>

<div class="row">

    <div class="col-4">
        @{
            await Html.RenderPartialAsync("GetAllFilterPartialView", Model.Filter);
        }
    </div>

    <div class="col-8">
        <table class="table">
            <tr>
                <th>
                    <span class="fw-bolder">Customer Id</span>
                </th>
                <th>
                    <span class="fw-bolder">Items Count</span>
                </th>
                <th>
                    <span class="fw-bolder">Total Sum</span>
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model.Orders)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CustomerId)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.ItemsCount)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.TotalSum)
                    </td>
                </tr>
            }

        </table>
    </div>
</div>